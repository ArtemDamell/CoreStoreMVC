@model CoreStoreMVC.Models.ViewModel.ShoppingCartViewModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2 class="text-info my-3">Shopping Cart</h2>
<div class="container border border-secondary rounded" style="padding: 15px">
    @if (Model.Products.Count > 0)
    {
        <form method="post">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-striped" width="100%">
                            <thead class="table-info text-center">
                                <tr>
                                    <th></th>
                                    <th>
                                        <label asp-for="@Model.Products.FirstOrDefault().Name"></label>
                                    </th>
                                    <th>
                                        <label asp-for="@Model.Products.FirstOrDefault().Price"></label>
                                    </th>
                                    <th>
                                        <label asp-for="@Model.Products.FirstOrDefault().ShadeColor"></label>
                                    </th>
                                    <th>
                                        <label asp-for="@Model.Products.FirstOrDefault().ProductTypes.Name"></label>
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Products)
                                {
                                    <tr class="p-5 text-center">
                                        <td>
                                            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                                                <img src="@item.Image" class="img-fluid" width="150" style="margin: auto; display:block; border-radius: 5px; border: 1px solid #bbb9b9;" />
                                            </a>
                                        </td>
                                        <td class="align-middle">
                                            @Html.DisplayFor(x => item.Name)
                                        </td>
                                        <td class="align-middle">
                                            @String.Format("{0:c}", item.Price)
                                        </td>
                                        <td class="align-middle">
                                            @Html.DisplayFor(x => item.ShadeColor)
                                        </td>
                                        <td class="align-middle">
                                            @Html.DisplayFor(x => item.ProductTypes.Name)
                                        </td>
                                        <td class="align-middle">
                                            <button type="submit" class="btn btn-danger" asp-action="remove" asp-route-id="@item.Id">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <hr />
                    </div>
                </div>
            </div>
        </form>
        <form method="post">
            <div class="col-12 pt-3">
                <div class="row mb-2">
                    <div class="col-12 col-md-4">
                        <label>First Name : </label>
                    </div>
                    <div class="col-12 col-md-4">
                        <input asp-for="@Model.Appointment.CustomerFirstName" class="form-control" />
                    </div>
                    <div class="col-12 col-md-4">
                        <span asp-validation-for="@Model.Appointment.CustomerFirstName" class="text-danger" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12 col-md-4">
                        <label>Last Name : </label>
                    </div>
                    <div class="col-12 col-md-4">
                        <input asp-for="@Model.Appointment.CustomerLastName" class="form-control" />
                    </div>
                    <div class="col-12 col-md-4">
                        <span asp-validation-for="@Model.Appointment.CustomerLastName" class="text-danger" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12 col-md-4">
                        <label>Phone Number : </label>
                    </div>
                    <div class="col-12 col-md-4">
                        <input asp-for="@Model.Appointment.CustomerPhoneNumber" class="form-control" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12 col-md-4">
                        <label>Email : </label>
                    </div>
                    <div class="col-12 col-md-4">
                        <input asp-for="@Model.Appointment.CustomerEmail" class="form-control" type="email" />
                    </div>
                    <div class="col-12 col-md-4">
                        <span asp-validation-for="@Model.Appointment.CustomerEmail" class="text-danger" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12 col-md-4">
                        <label>Appointment Day : </label>
                    </div>
                    <div class="col-12 col-md-4">
                        <input asp-for="@Model.Appointment.AppointmentDay" class="form-control" type="date" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12 col-md-4">
                        <label>Appointment Time : </label>
                    </div>
                    <div class="col-12 col-md-4">
                        <input asp-for="@Model.Appointment.AppointmentTime" class="form-control" type="time" min="08:00" max="18:00" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12 col-md-4">
                        <label>Adress : </label>
                    </div>
                    <div class="col-12 col-md-4">
                        <input asp-for="@Model.Appointment.Adress" class="form-control" />
                    </div>
                    <div class="col-12 col-md-4">
                        <span asp-validation-for="@Model.Appointment.Adress" class="text-danger" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12 col-md-4">
                        <label>Index : </label>
                    </div>
                    <div class="col-12 col-md-4">
                        <input asp-for="@Model.Appointment.Index" class="form-control" />
                    </div>
                    <div class="col-12 col-md-4">
                        <span asp-validation-for="@Model.Appointment.Index" class="text-danger" />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-12 col-md-4">
                        <label>City : </label>
                    </div>
                    <div class="col-12 col-md-4">
                        <input asp-for="@Model.Appointment.City" class="form-control" />
                    </div>
                    <div class="col-12 col-md-4">
                        <span asp-validation-for="@Model.Appointment.City" class="text-danger" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" id="btnPlaceOrder" class="btn btn-success">Schedule Appointment</button>
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-danger">No items added to the shopping cart...</div>
    }
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}